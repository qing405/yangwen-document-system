/* pages/admin/upload/upload.wxss */

.container {
  padding: 0;
  background-color: #F5F7FA;
  min-height: 100vh;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #0D1F3C 0%, #1E3A68 100%);
  color: white;
  padding: 20px 16px;
  border-radius: 0 0 12px 12px;
  box-shadow: 0 2px 8px rgba(13, 31, 60, 0.15);
  margin-bottom: 20px;
}

.header-title {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 8px;
}

.title-text {
  font-size: 24px;
  font-weight: 600;
}

.header-subtitle {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}



/* 上传表单 */
.upload-form {
  margin: 0 16px 20px;
}

.form-section {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  gap: 8px;
}

/* 文件选择器 */
.file-selector {
  border: 2px dashed #E5E5E5;
  border-radius: 8px;
  padding: 40px 20px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.file-selector:hover {
  border-color: #007BFF;
  background: #F8F9FA;
}

.file-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
}

.placeholder-text {
  font-size: 16px;
  color: #666666;
  font-weight: 500;
}

.placeholder-hint {
  font-size: 12px;
  color: #999999;
  margin-bottom: 12px;
}

.batch-hint {
  font-size: 12px;
  color: #007BFF;
  background: #F0F8FF;
  padding: 4px 8px;
  border-radius: 12px;
  font-weight: 500;
}

.supported-formats {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  justify-content: center;
  margin-top: 8px;
}

.format-tag {
  background: #E3F2FD;
  color: #1976D2;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 10px;
  font-weight: 500;
}

/* 文件列表样式 */
.files-list {
  width: 100%;
}

.files-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid #E5E5E5;
}

.files-count {
  font-size: 14px;
  color: #333333;
  font-weight: 500;
}

.files-change {
  color: #007BFF;
  font-size: 12px;
  padding: 4px 8px;
  border: 1px solid #007BFF;
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.files-change:hover {
  background: #007BFF;
  color: white;
}

.file-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  background: #F8F9FA;
  border-radius: 8px;
  margin-bottom: 8px;
  border: 1px solid #E9ECEF;
  transition: all 0.3s ease;
}

.file-item:hover {
  background: #E9ECEF;
  border-color: #DEE2E6;
}

.file-item:last-child {
  margin-bottom: 0;
}

.file-icon {
  flex-shrink: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 6px;
  border: 1px solid #E5E5E5;
}

.file-details {
  flex: 1;
  text-align: left;
  min-width: 0;
}

.file-name {
  display: block;
  font-size: 14px;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-meta {
  display: flex;
  align-items: center;
  gap: 8px;
}

.file-size {
  display: block;
  font-size: 12px;
  color: #666666;
  margin-bottom: 2px;
}

.file-type {
  display: block;
  font-size: 11px;
  color: #007BFF;
  background: #F0F8FF;
  padding: 2px 6px;
  border-radius: 4px;
  display: inline-block;
}

.file-remove {
  flex-shrink: 0;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFE6E6;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
}

.file-remove:hover {
  background: #FFCCCC;
  transform: scale(1.1);
}

.file-remove:active {
  transform: scale(0.95);
}

.file-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

/* 表单项目 */
.form-item {
  margin-bottom: 20px;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 14px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8px;
}

.form-input {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid #E5E5E5;
  border-radius: 8px;
  font-size: 14px;
  color: #333333;
  background: white;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #007BFF;
  box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

.form-textarea {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid #E5E5E5;
  border-radius: 8px;
  font-size: 14px;
  color: #333333;
  background: white;
  min-height: 80px;
  resize: none;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #007BFF;
  box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

.textarea-counter {
  text-align: right;
  font-size: 12px;
  color: #999999;
  margin-top: 4px;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  border: 1px solid #E5E5E5;
  border-radius: 8px;
  background: white;
  cursor: pointer;
  transition: all 0.3s ease;
}

/* 部门标签 */
.dept-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 8px;
}

.dept-tag {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  background: #EEF5FF;
  color: #1E3A68;
  border: 1px solid #C9E1FF;
  padding: 4px 8px;
  border-radius: 14px;
  font-size: 12px;
}

.dept-tag .tag-remove {
  color: #6B7280;
  padding-left: 4px;
}

.form-picker:hover {
  border-color: #007BFF;
  background: #F8F9FA;
}

.picker-text {
  font-size: 14px;
  color: #333333;
}

/* 上传进度 */
.upload-progress {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: #F0F0F0;
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 8px;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007BFF 0%, #0056CC 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 14px;
  color: #666666;
  text-align: center;
}

/* 表单操作 */
.form-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
}

.btn {
  padding: 12px 24px;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 100px;
}

.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-primary {
  background: linear-gradient(135deg, #007BFF 0%, #0056CC 100%);
  color: white;
  box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
}

.btn-primary:hover:not(:disabled) {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(0, 123, 255, 0.4);
}

.btn-primary:active:not(:disabled) {
  transform: translateY(0);
}

.btn-secondary {
  background: #F8F9FA;
  color: #666666;
  border: 1px solid #E5E5E5;
}

.btn-secondary:hover:not(:disabled) {
  background: #E9ECEF;
  border-color: #DEE2E6;
}

/* 手机端优化 */
@media (max-width: 480px) {
  .header {
    padding: 16px 12px;
    margin-bottom: 16px;
  }
  
  .title-text {
    font-size: 20px;
  }
  
  .header-subtitle {
    font-size: 13px;
  }
  
  .upload-form {
    margin: 0 12px 16px;
  }
  
  .form-section {
    padding: 16px;
    margin-bottom: 12px;
  }
  
  .section-title {
    font-size: 16px;
    margin-bottom: 12px;
  }
  
  .file-selector {
    padding: 30px 16px;
  }
  
  .placeholder-text {
    font-size: 14px;
  }
  
  .placeholder-hint {
    font-size: 11px;
  }
  
  .form-item {
    margin-bottom: 16px;
  }
  
  .form-label {
    font-size: 13px;
    margin-bottom: 6px;
  }
  
  .form-input,
  .form-textarea,
  .form-picker {
    padding: 10px 12px;
    font-size: 13px;
  }
  
  .form-textarea {
    min-height: 60px;
  }
  
  .upload-progress {
    padding: 16px;
    margin-bottom: 12px;
  }
  
  .progress-text {
    font-size: 13px;
  }
  
  .form-actions {
    gap: 8px;
  }
  
  .btn {
    padding: 10px 20px;
    font-size: 13px;
    min-width: 80px;
  }
}