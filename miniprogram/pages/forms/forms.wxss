  border: 1px solid rgba(0, 0, 0, 0.05);
}

.forms-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18px 20px;
  border-bottom: 1px solid #F1F5F9;
  background: #F8FAFC;
}

.forms-title {
  display: flex;
  align-items: center;
  gap: 8px;
}

.title-text {
  font-size: 18px;
  font-weight: 600;
  color: #333333;
}

.form-count-badge {
  background: rgba(0, 123, 255, 0.1);
  color: #007BFF;
  padding: 3px 6px;
  border-radius: 8px;
  font-size: 10px;
  font-weight: 600;
}

.forms-actions {
  display: flex;
  gap: 12px;
  align-items: center;
}

.view-toggle {
  display: flex;
  background: #F1F5F9;
  border-radius: 8px;
  padding: 3px;
  gap: 2px;
}

.toggle-btn {
  width: 28px;
  height: 28px;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.toggle-btn.active {
  background: #007BFF;
  color: white;
}

.toggle-btn:not(.active):hover {
  background: #E2E8F0;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 6px;
  background: rgba(0, 123, 255, 0.1);
  color: #007BFF;
  padding: 8px 12px;
  border-radius: 8px;
  font-size: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 1px solid rgba(0, 123, 255, 0.2);
}

.filter-btn:active {
  transform: translateY(1px);
  background: rgba(0, 123, 255, 0.2);
}

.filter-text {
  font-weight: 600;
}

/* 筛选面板 */
.filter-panel {
  padding: 18px 20px;
  border-bottom: 1px solid #F1F5F9;
  background: #F8FAFC;
}

.filter-content {
  max-width: 100%;
}

.filter-section {
  margin-bottom: 16px;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-title {
  font-size: 12px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
}

.filter-options {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.filter-option {
  padding: 6px 12px;
  background: #FFFFFF;
  border: 1px solid #E2E8F0;
  border-radius: 16px;
  font-size: 11px;
  color: #64748B;
  cursor: pointer;
  transition: all 0.2s ease;
  font-weight: 500;
}

.filter-option:hover {
  border-color: #007BFF;
  color: #007BFF;
  background: rgba(0, 123, 255, 0.05);
  transform: translateY(-1px);
}

.filter-option.active {
  background: #007BFF;
  border-color: #007BFF;
  color: white;
  box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
}

/* 表单列表 */
.form-list {
  padding: 18px 20px;
}

.form-list.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 16px;
}

.form-card {
  background: #FFFFFF;
  border: 1px solid #F1F5F9;
  border-radius: 12px;
  padding: 18px;
  margin-bottom: 16px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.form-list.grid .form-card {
  margin-bottom: 0;
}

.form-card:hover {
  border-color: #007BFF;
  box-shadow: 0 8px 24px rgba(0, 123, 255, 0.15);
  transform: translateY(-2px);
  background: #FFFFFF;
}

.form-card.template {
  border-color: #8B5CF6;
  background: rgba(139, 92, 246, 0.02);
}

.form-card.template::before {
  content: '模板';
  position: absolute;
  top: 8px;
  right: 8px;
  background: #8B5CF6;
  color: white;
  padding: 2px 6px;
  border-radius: 8px;
  font-size: 9px;
  font-weight: 600;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 14px;
}

.form-title-section {
  flex: 1;
  margin-right: 16px;
}

.form-title {
  font-size: 16px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8px;
  line-height: 1.4;
}

.form-meta {
  display: flex;
  gap: 12px;
  align-items: center;
}

.form-type, .form-status {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 10px;
  font-weight: 500;
  padding: 2px 6px;
  border-radius: 6px;
  background: rgba(0, 0, 0, 0.05);
}

.form-actions {
  flex-shrink: 0;
}

.action-dropdown {
  width: 24px;
  height: 24px;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.action-dropdown:hover {
  background: rgba(0, 0, 0, 0.05);
}

.form-content {
  margin-bottom: 16px;
}

.form-description {
  font-size: 12px;
  color: #64748B;
  line-height: 1.5;
  margin-bottom: 12px;
  display: block;
}

.form-stats {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 12px;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 11px;
