.form-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12px;
  border-top: 1px solid #F1F5F9;
}

.form-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.creator, .update-time {
  font-size: 10px;
  color: #94A3B8;
  font-weight: 400;
}

.form-buttons {
  display: flex;
  gap: 8px;
}

.form-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 10px;
  border-radius: 6px;
  font-size: 10px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 1px solid transparent;
}

.form-btn.preview {
  background: rgba(0, 123, 255, 0.1);
  color: #007BFF;
  border-color: rgba(0, 123, 255, 0.2);
}

.form-btn.edit {
  background: rgba(16, 185, 129, 0.1);
  color: #10B981;
  border-color: rgba(16, 185, 129, 0.2);
}

.form-btn.publish {
  background: rgba(0, 123, 255, 0.1);
  color: #007BFF;
  border-color: rgba(0, 123, 255, 0.2);
}

.form-btn.responses {
  background: rgba(139, 92, 246, 0.1);
  color: #8B5CF6;
