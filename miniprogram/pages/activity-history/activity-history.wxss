/* pages/activity-history/activity-history.wxss */
.container {
  min-height: 100vh;
  background: #F5F7FA;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 16px;
  background: #FFFFFF;
  border-bottom: 1px solid #E9ECEF;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.header-left:active {
  background: rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 18px;
  font-weight: 600;
  color: #333333;
}

.header-right {
  width: 40px;
}

/* 活动容器 */
.activities-container {
  padding: 16px;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E9ECEF;
  border-top: 3px solid #007BFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

.loading-text {
  font-size: 14px;
  color: #999999;
  display: flex;
  align-items: center;
  gap: 8px;
}

.loading-spinner-small {
  width: 16px;
  height: 16px;
  border: 2px solid #E9ECEF;
  border-top: 2px solid #007BFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 活动列表 */
.activities-list {
  background: #FFFFFF;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.activity-item {
  display: flex;
  align-items: flex-start;
  padding: 16px 20px;
  border-bottom: 1px solid #F5F7FA;
  transition: background-color 0.2s ease;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-item:active {
  background-color: rgba(0, 123, 255, 0.05);
}

.activity-icon {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16px;
  flex-shrink: 0;
}

.activity-content {
  flex: 1;
  min-width: 0;
}

.activity-title {
  font-size: 15px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8px;
  line-height: 1.4;
  word-break: break-all;
}

.activity-meta {
  margin-bottom: 6px;
}

.activity-user {
  font-size: 13px;
  color: #007BFF;
  font-weight: 500;
}

.activity-role {
  font-size: 13px;
  color: #999999;
  margin-left: 4px;
}

.activity-time {
  font-size: 12px;
  color: #999999;
}

/* 加载更多区域 */
.load-more {
  padding: 20px;
  text-align: center;
  border-top: 1px solid #E9ECEF;
}

.load-more-text {
  color: #007BFF;
  font-size: 14px;
  cursor: pointer;
  padding: 12px 24px;
  border-radius: 20px;
  background: rgba(0, 123, 255, 0.1);
  border: 1px solid rgba(0, 123, 255, 0.2);
  transition: all 0.2s ease;
  display: inline-block;
}

.load-more-text:active {
  background: rgba(0, 123, 255, 0.2);
}

.no-more-text {
  color: #CCCCCC;
  font-size: 14px;
}

/* 无活动提示 */
.no-activities {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  color: #999999;
}

.no-activities icon {
  margin-bottom: 16px;
}

.no-activities text {
  font-size: 16px;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .header {
    padding: 16px 12px;
  }
  
  .header-title {
    font-size: 16px;
  }
  
  .activities-container {
    padding: 12px;
  }
  
  .activity-item {
    padding: 14px 16px;
  }
  
  .activity-icon {
    width: 32px;
    height: 32px;
    margin-right: 12px;
  }
  
  .activity-title {
    font-size: 14px;
  }
  
  .activity-user,
  .activity-role {
    font-size: 12px;
  }
  
  .activity-time {
    font-size: 11px;
  }
  
  .load-more-text {
    padding: 10px 20px;
    font-size: 13px;
  }
}
