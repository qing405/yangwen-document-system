/* pages/task-query/task-query.wxss */

.container {
  min-height: 100vh;
  background: #F8FAFC;
}

/* 头部导航 */
.header {
  background: linear-gradient(135deg, #007BFF 0%, #0056B3 100%);
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #FFFFFF;
}

.header-left {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

.header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.view-toggle {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 8rpx;
}

.toggle-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.toggle-btn.active {
  background: rgba(255, 255, 255, 0.3);
}

/* 搜索栏 */
.search-section {
  background: #FFFFFF;
  margin: 32rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  gap: 24rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #334155;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #94A3B8;
}

/* 筛选器 */
.filter-section {
  background: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
}

.filter-toggle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #007BFF;
  font-size: 28rpx;
  cursor: pointer;
}

.filter-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.filter-row {
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.filter-label {
  font-size: 28rpx;
  color: #64748B;
  min-width: 120rpx;
}

.filter-selector {
  flex: 1;
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.filter-option {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.filter-option.active {
  background: #007BFF;
  color: #FFFFFF;
}

.filter-option:not(.active) {
  background: #F1F5F9;
  color: #64748B;
}

.filter-option:not(.active):active {
  background: #E2E8F0;
}

/* 任务列表 */
.tasks-section {
  margin: 0 32rpx 32rpx;
}

.tasks-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.tasks-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
}

.tasks-count {
  font-size: 24rpx;
  color: #64748B;
}

/* 列表视图 */
.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.task-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.task-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  flex: 1;
  margin-right: 20rpx;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.task-meta {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #64748B;
  min-width: 120rpx;
}

.meta-value {
  font-size: 24rpx;
  color: #334155;
  flex: 1;
}

.task-progress {
  margin-bottom: 24rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #64748B;
}

.progress-percentage {
  font-size: 24rpx;
  font-weight: 600;
  color: #007BFF;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #E2E8F0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007BFF, #0056B3);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.task-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.action-btn {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
  flex: 1;
  min-width: 120rpx;
}

.action-btn.primary {
  background: #007BFF;
  color: #FFFFFF;
}

.action-btn.primary:active {
  background: #0056B3;
}

.action-btn.secondary {
  background: #F1F5F9;
  color: #64748B;
}

.action-btn.secondary:active {
  background: #E2E8F0;
}

/* 网格视图 */
.tasks-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 24rpx;
}

.task-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.task-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
  flex: 1;
  margin-right: 16rpx;
}

.card-status {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.card-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.card-meta-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-meta-label {
  font-size: 22rpx;
  color: #64748B;
  min-width: 80rpx;
}

.card-meta-value {
  font-size: 22rpx;
  color: #334155;
  flex: 1;
}

.card-progress {
  margin-bottom: 20rpx;
}

.card-progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E2E8F0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.card-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007BFF, #0056B3);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.card-progress-text {
  font-size: 20rpx;
  color: #64748B;
  text-align: center;
}

.card-actions {
  display: flex;
  gap: 12rpx;
}

.card-action-btn {
  flex: 1;
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.card-action-btn.primary {
  background: #007BFF;
  color: #FFFFFF;
}

.card-action-btn.primary:active {
  background: #0056B3;
}

.card-action-btn.secondary {
  background: #F1F5F9;
  color: #64748B;
}

.card-action-btn.secondary:active {
  background: #E2E8F0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #64748B;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #94A3B8;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #64748B;
  font-size: 28rpx;
}

/* 状态颜色 */
.status-pending {
  background: #FEF3C7;
  color: #D97706;
}

.status-in_progress {
  background: #DBEAFE;
  color: #2563EB;
}

.status-completed {
  background: #D1FAE5;
  color: #059669;
}

.status-overdue {
  background: #FEE2E2;
  color: #DC2626;
}

/* 优先级颜色 */
.priority-high {
  background: #FEE2E2;
  color: #DC2626;
}

.priority-medium {
  background: #FEF3C7;
  color: #D97706;
}

.priority-low {
  background: #D1FAE5;
  color: #059669;
}

/* 响应式设计 - 手机屏幕优化 */
@media (max-width: 750rpx) {
  .header {
    padding: 30rpx 24rpx;
  }
  
  .header-title {
    font-size: 32rpx;
  }
  
  .search-section, .filter-section, .tasks-section {
    margin: 24rpx;
  }
  
  .task-item, .task-card {
    padding: 24rpx;
  }
  
  .task-title, .card-title {
    font-size: 28rpx;
  }
  
  .filter-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .filter-label {
    min-width: auto;
  }
  
  .filter-selector {
    width: 100%;
  }
  
  .tasks-grid {
    grid-template-columns: 1fr;
  }
  
  .task-actions, .card-actions {
    flex-direction: column;
  }
  
  .action-btn, .card-action-btn {
    min-width: auto;
  }
}

/* 任务操作按钮 */
.task-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  flex: 1;
  justify-content: center;
  background: #F1F5F9;
  color: #64748B;
}

.action-item:active {
  background: #E2E8F0;
}

.action-item.primary {
  background: #007BFF;
  color: #FFFFFF;
}

.action-item.primary:active {
  background: #0056B3;
}

.action-item.completed {
  background: #D1FAE5;
  color: #059669;
}