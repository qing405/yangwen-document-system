/* pages/login/login.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #F5F7FA 0%, #E8ECF1 100%);
}

.login-header {
  text-align: center;
  padding: 60px 20px 40px;
  background: linear-gradient(135deg, #0D1F3C 0%, #1E3A68 100%);
  color: white;
  border-radius: 0 0 30px 30px;
  margin-bottom: 40px;
  box-shadow: 0 4px 20px rgba(13, 31, 60, 0.3);
}

.logo {
  margin-bottom: 15px;
}

.logo-text {
  font-size: 32px;
  font-weight: 700;
  color: white;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

.login-form {
  padding: 0 30px;
  margin-bottom: 40px;
  flex: 1;
}

.form-group {
  margin-bottom: 25px;
}

.input {
  width: 100%;
  height: 55px;
  padding: 0 20px;
  background: #FFFFFF;
  border: 2px solid #E5E5E5;
  border-radius: 12px;
  font-size: 16px;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.input:focus {
  border-color: #007BFF;
  box-shadow: 0 4px 12px rgba(0, 123, 255, 0.15);
  outline: none;
}

.input::placeholder {
  color: #999999;
  font-size: 16px;
}

.btn {
  width: 100%;
  height: 55px;
  background: linear-gradient(135deg, #007BFF 0%, #0056CC 100%);
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 18px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
  margin-top: 10px;
}

.btn:active {
  transform: translateY(2px);
  box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
}

.btn:disabled {
  background: #CCCCCC;
  box-shadow: none;
  cursor: not-allowed;
}

.btn-primary {
  background: linear-gradient(135deg, #007BFF 0%, #0056CC 100%);
}

.btn-block {
  display: block;
  width: 100%;
}

.login-footer {
  text-align: center;
  padding: 0 30px 40px;
}

.footer-text {
  font-size: 14px;
  color: #666666;
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-height: 600px) {
  .login-header {
    padding: 40px 20px 30px;
    margin-bottom: 30px;
  }
  
  .logo-text {
    font-size: 28px;
  }
  
  .login-form {
    padding: 0 25px;
    margin-bottom: 30px;
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .input, .btn {
    height: 50px;
  }
}
