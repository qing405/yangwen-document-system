/* pages/form-editor/form-editor.wxss */

.container {
  min-height: 100vh;
  background: #F8FAFC;
}

/* 头部导航 */
.header {
  background: linear-gradient(135deg, #007BFF 0%, #0056B3 100%);
  padding: 20px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #FFFFFF;
}

.header-left {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
}

.header-right {
  display: flex;
  gap: 12px;
}

.header-action {
  padding: 8px 16px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.header-action:hover {
  background: rgba(255, 255, 255, 0.3);
}

/* 表单基本信息 */
.form-info-section {
  background: #FFFFFF;
  margin: 16px;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.form-input-group {
  margin-bottom: 16px;
}

.form-input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #374151;
  margin-bottom: 8px;
}

.form-input {
  width: 100%;
  padding: 12px;
  border: 1px solid #E2E8F0;
  border-radius: 8px;
  font-size: 14px;
  transition: border-color 0.2s ease;
}

.form-input:focus {
  border-color: #007BFF;
  outline: none;
}

.form-textarea {
  min-height: 80px;
  resize: vertical;
}

.form-select {
  background: #FFFFFF;
}

.picker-text {
  color: #333333;
}

/* 字段类型选择 */
.field-types-section {
  background: #FFFFFF;
  margin: 0 16px 16px;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.field-types-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: 12px;
}

.field-type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 16px 12px;
  background: #F8FAFC;
  border: 1px solid #E2E8F0;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: center;
}

.field-type-item:hover {
  background: #F1F5F9;
  border-color: #CBD5E1;
  transform: translateY(-2px);
}

.field-type-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #E6F7FF;
  border-radius: 6px;
  color: #007BFF;
}

.field-type-label {
  font-size: 12px;
  color: #64748B;
  font-weight: 500;
}

/* 字段列表 */
.fields-section {
  background: #FFFFFF;
  margin: 0 16px 16px;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.fields-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16px;
}

.fields-count {
  font-size: 14px;
  color: #64748B;
}

.add-field-btn {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 16px;
  background: #007BFF;
  color: #FFFFFF;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.add-field-btn:hover {
  background: #0056B3;
}

.field-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: #F8FAFC;
  border: 1px solid #E2E8F0;
  border-radius: 8px;
  margin-bottom: 12px;
  transition: all 0.2s ease;
}

.field-item:hover {
  background: #F1F5F9;
  border-color: #CBD5E1;
}

.field-item:last-child {
  margin-bottom: 0;
}

.field-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #E6F7FF;
  border-radius: 6px;
  color: #007BFF;
}

.field-content {
  flex: 1;
}

.field-label {
  font-size: 14px;
  font-weight: 500;
  color: #1E293B;
  margin-bottom: 4px;
}

.field-type {
  font-size: 12px;
  color: #64748B;
}

.field-actions {
  display: flex;
  gap: 8px;
}

.field-action {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border: 1px solid #E2E8F0;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.field-action:hover {
  background: #F1F5F9;
  border-color: #CBD5E1;
}

.field-action.edit {
  color: #007BFF;
}

.field-action.delete {
  color: #EF4444;
}

.field-action.move {
  color: #64748B;
}

/* 表单设置 */
.settings-section {
  background: #FFFFFF;
  margin: 0 16px 16px;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 0;
  border-bottom: 1px solid #F1F5F9;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: #374151;
}

.setting-desc {
  font-size: 12px;
  color: #94A3B8;
  margin-top: 4px;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 16px;
  border-top: 1px solid #E2E8F0;
  display: flex;
  gap: 12px;
}

.action-btn {
  flex: 1;
  padding: 16px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.action-btn.secondary {
  background: #F8FAFC;
  color: #64748B;
  border: 1px solid #E2E8F0;
}

.action-btn.secondary:hover {
  background: #F1F5F9;
}

.action-btn.primary {
  background: #007BFF;
  color: #FFFFFF;
  border: 1px solid #007BFF;
}

.action-btn.primary:hover {
  background: #0056B3;
}

.action-btn.success {
  background: #10B981;
  color: #FFFFFF;
  border: 1px solid #10B981;
}

.action-btn.success:hover {
  background: #059669;
}

/* 空状态 */
.empty-fields {
  text-align: center;
  padding: 40px 20px;
  color: #94A3B8;
}

.empty-fields-icon {
  margin-bottom: 16px;
}

.empty-fields-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8px;
}

.empty-fields-desc {
  font-size: 14px;
}

/* 弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #FFFFFF;
  border-radius: 12px;
  width: 90%;
  max-height: 80%;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
  border-bottom: 1px solid #E2E8F0;
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #1E293B;
}

.close-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.modal-body {
  padding: 20px;
  max-height: 400px;
  overflow-y: auto;
}

.field-editor-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.modal-actions {
  display: flex;
  gap: 12px;
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid #E2E8F0;
}

.modal-btn {
  flex: 1;
  padding: 12px 16px;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.modal-btn.secondary {
  background: #F8FAFC;
  color: #64748B;
  border: 1px solid #E2E8F0;
}

.modal-btn.secondary:hover {
  background: #F1F5F9;
}

.modal-btn.primary {
  background: #007BFF;
  color: #FFFFFF;
  border: 1px solid #007BFF;
}

.modal-btn.primary:hover {
  background: #0056B3;
}

/* 预览弹窗 */
.preview-content {
  width: 95%;
  max-width: 500px;
  max-height: 90%;
}

.preview-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.preview-form-header {
  text-align: center;
  padding-bottom: 20px;
  border-bottom: 1px solid #F1F5F9;
}

.preview-form-title {
  font-size: 20px;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 8px;
  display: block;
}

.preview-form-desc {
  font-size: 14px;
  color: #64748B;
  line-height: 1.5;
}

.preview-form-fields {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.preview-field {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.preview-field-label {
  font-size: 14px;
  font-weight: 500;
  color: #1E293B;
}

.required-mark {
  color: #EF4444;
  margin-left: 4px;
}

.preview-field-input {
  width: 100%;
}

.preview-input, .preview-textarea {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #E2E8F0;
  border-radius: 8px;
  background: #FFFFFF;
  font-size: 14px;
}

.preview-textarea {
  min-height: 80px;
  resize: none;
}

.preview-picker {
  width: 100%;
}

.preview-picker-text {
  padding: 10px 12px;
  border: 1px solid #E2E8F0;
  border-radius: 8px;
  background: #FFFFFF;
  color: #333333;
  font-size: 14px;
}

.preview-rating-input {
  display: flex;
  justify-content: center;
}

.preview-rating-stars {
  display: flex;
  gap: 8px;
}

.preview-star {
  font-size: 24px;
  color: #FCD34D;
  cursor: pointer;
  transition: all 0.2s ease;
}

.preview-star:hover {
  transform: scale(1.1);
}

.preview-file-input {
  width: 100%;
}

.preview-file-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 20px;
  border: 2px dashed #CBD5E1;
  border-radius: 8px;
  background: #F8FAFC;
  color: #64748B;
  font-size: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.preview-file-upload:hover {
  border-color: #007BFF;
  background: rgba(0, 123, 255, 0.05);
}

.preview-form-submit {
  padding-top: 20px;
  border-top: 1px solid #F1F5F9;
}

.preview-submit-btn {
  width: 100%;
  padding: 12px 20px;
  background: #007BFF;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.preview-submit-btn:hover {
  background: #0056B3;
  transform: translateY(-1px);
}

.preview-submit-btn:active {
  transform: translateY(0);
}

/* 复选框样式 */
.checkbox-label {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: #374151;
  cursor: pointer;
}

.checkbox-label input[type="checkbox"] {
  width: 16px;
  height: 16px;
  accent-color: #007BFF;
}

/* 响应式设计 */
@media (max-width: 480px) {
  .field-types-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .bottom-actions {
    padding: 12px;
  }
  
  .action-btn {
    padding: 12px;
    font-size: 14px;
  }
  
  .modal-content {
    width: 95%;
  }
  
  .preview-content {
    width: 98%;
  }
}
